<div class="row d-flex justify-content-center">
    <div class="col-12 col-sm-5">
        {{#if isEditing}}
        <div class="card mt-5 shadow">
            <div class="card-header bg-dark">
                <h3 class="card-title" style="color: white;">Edita el genero {{genero.name}}</h3>
            </div>
            <div class="card-body">
                <form action="/generos/edit" method="POST" class="form">
                    <input type="text" class="form-control" name="GeneroId" id="GeneroId" hidden value="{{genero.id}}">
                    <label for="nombreGenero" class="form-label">Nombre</label>
                    <input type="text" class="form-control" name="nombreGenero" id="nombreGenero" required
                        value="{{genero.name}}">

                    <div class="float-end mt-2">
                        <a href="/generos/index" class="btn btn-warning">Volver</a>
                        <button class="btn btn-success" type="subtmit">Editar</button>
                    </div>


                </form>
            </div>
        </div>
        {{else}}
        <div class="card mt-5 shadow">
            <div class="card-header bg-dark">
                <h3 class="card-title" style="color: white;">Crear un genero</h3>
            </div>
            <div class="card-body">
                <form action="/generos/create" method="POST" class="form">

                    <label for="nombreGenero" class="form-label">Nombre</label>
                    <input type="text" class="form-control" name="nombreGenero" id="nombreGenero" required>

                    <div class="float-end mt-2">
                        <a href="/generos/index" class="btn btn-warning">Volver</a>
                        <button class="btn btn-success" type="subtmit">Crear</button>
                    </div>
                </form>
            </div>
        </div>
        {{/if}}
    </div>
</div>