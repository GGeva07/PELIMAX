<form action="/login" method="POST" class="p-4 rounded shadow-sm bg-white" style="max-width: 400px; margin: 40px auto;">
    <h2 class="mb-4 text-center">Iniciar Sesión</h2>
    {{#if error}}
    <div class="alert alert-danger text-center">{{error}}</div>
    {{/if}}
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" required autocomplete="username"
            placeholder="ejemplo@correo.com">
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Contraseña</label>
        <input type="password" class="form-control" id="password" name="password" required
            autocomplete="current-password" placeholder="Tu contraseña">
    </div>
    <button type="submit" class="btn btn-dark w-100 mb-2">Entrar</button>
    <div class="text-center">
        <a href="/register" class="small">¿No tienes cuenta? <strong>Regístrate</strong></a>
    </div>
</form>